<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_uees"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cómo desea registrarse?"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnAdmisiones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admisiones"
        android:background="@color/dark_red"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnEducacionContinua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UEES Educación Continua"
        android:layout_marginBottom="10dp"
        android:background="@color/dark_red"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnUEESOnline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_red"
        android:text="UEES Online"
        android:textColor="@android:color/white"/>
</LinearLayout>
