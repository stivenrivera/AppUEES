<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Sección: Datos Personales -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_button"
            android:padding="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📍 Datos Personales"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de Identificación"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <Spinner
                    android:id="@+id/spinnerTipoIdentificacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:padding="8dp"/>
            </LinearLayout>


            <EditText
                android:id="@+id/numeroIdentificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Número de Identificación"
                android:background="@android:color/darker_gray"/>

            <EditText
                android:id="@+id/nombres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombres"
                android:background="@android:color/darker_gray"/>

            <EditText
                android:id="@+id/apellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellidos"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>

        <!-- Sección: Información de Contacto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_button"
            android:padding="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📞 Informacion De Contacto"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <EditText
                android:id="@+id/paisResidencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="País de Residencia"
                android:background="@android:color/darker_gray"/>

            <EditText
                android:id="@+id/provinciaResidencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Provincia de Residencia"
                android:background="@android:color/darker_gray"/>

            <EditText
                android:id="@+id/ciudadResidencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ciudad de Residencia"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>

        <!-- Sección: Lugar de Nacimiento -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_button"
            android:padding="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌍 Lugar De Nacimiento"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <EditText
                android:id="@+id/paisNacimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="País de Nacimiento"
                android:background="@android:color/darker_gray"/>

            <EditText
                android:id="@+id/provinciaNacimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Provincia de Nacimiento"
                android:background="@android:color/darker_gray"/>

            <EditText
                android:id="@+id/ciudadNacimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ciudad de Nacimiento"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>

        <!-- Sección: Información de Familiares -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_button"
            android:padding="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="👨‍👩‍👧‍👦 Informacion De Familiares (OPCIONAL)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <EditText
                android:id="@+id/nombrePadre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombres y Apellidos del Padre"
                android:background="@android:color/darker_gray"/>

            <EditText
                android:id="@+id/nombreMadre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombres y Apellidos de la Madre"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>

        <!-- Botón de Continuar -->
        <Button
            android:id="@+id/btnContinuar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continuar"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"/>
    </LinearLayout>

</ScrollView>
